/* pages/Math/math.wxss */
page {
  background: #f8f8f8;
}
.container{
  padding:0.875rem;
}
.card {
  margin: .625rem .9375rem;
  border-radius: 1px;
  box-shadow: 0 1px 2px rgba(0,0,0,.3);
  background: #fff;
  color: #333;
  width:17.491rem;
  align-items: center;
  display:flex;
  justify-content: center;
}
.formula-card{
  border-top: 1px solid #eee;
  font-size: 3.875rem;
  color: #888;
  display:flex;
  -webkit-box-pack: justify;
  justify-content: space-between;
  -webkit-box-align: center;
  padding: .625rem .625rem;
}

.formula-text{
  padding:0rem .625rem;
}

.button-group{
  margin: 1rem 1rem 1rem 1rem;
  list-style-type: none;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  align-items:flex-start;
  align-content: flex-start;
  justify-content: center;
}
.button-item{
  display:flex;
  flex-direction: row;
  flex-wrap:wrap;
  justify-content: space-around;
  align-content: space-around;
  width:5rem;
  height:5rem;
}
.rst-btn{
  font-size: 1.875rem;
  width:100%;
  z-index:1;
}
.img-container{
  position:absolute;
  left:142px;
  top:458px;
  width:5rem;
  height:5rem;
  background: #FFF;
  z-index:10;
}
.rst-img{
  object-fit:contain;
  width:100%;
  height:100%;
  border:1px solid rgba(0, 0, 0, 0.2);
  box-shadow: 0 1px 2px rgba(0,0,0,.3);
  border-radius:5px;
}
.next-btn{
  text-align: center;
  font-size:1.875rem;
  background-color:#c2f0c2;
}