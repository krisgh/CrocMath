/**index.wxss**/

.next-btn {
  text-align: center;
  font-size: 1.875rem;
  background-color: #c2f0c2;
}

.thumbnails {
  list-style-type: none;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: flex-start;
  align-content: flex-start;
  justify-content: center;
  padding: 0.875rem;
}

.pic-pick {
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-radius: 5px;
  width: 5rem;
  height: 5rem;
  margin: 0.12rem;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

.pic-picked {
  background: #08c;
}

.thum-pic {
  width: 60%;
  height: 60%;
}

.card {
  margin: 0.625rem 0.9375rem;
  border-radius: 1px;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  background: #fff;
  color: #333;
  width: 17.971rem;
  align-items: center;
  display: flex;
  justify-content: center;
}
